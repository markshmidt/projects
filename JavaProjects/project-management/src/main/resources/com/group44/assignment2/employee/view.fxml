<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.group44.assignment2.controllers.employee.ViewController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="10.0"
              AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <HBox prefWidth="200.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#back" text="&lt; Back"/>
                        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
                              HBox.hgrow="ALWAYS">
                            <children>
                                <Text fx:id="titleText" strokeType="OUTSIDE" strokeWidth="0.0" text="Title"/>
                            </children>
                        </HBox>
                        <Button mnemonicParsing="false" onAction="#save" text="Save"/>
                    </children>
                </HBox>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Role"/>
                        <Label text="Department" GridPane.rowIndex="1"/>
                        <Label text="Name" GridPane.rowIndex="2"/>
                        <Label text="Email" GridPane.rowIndex="3"/>
                        <Label text="Password" GridPane.rowIndex="4"/>
                        <Label text="Phone" GridPane.rowIndex="5"/>
                        <Label text="Hourly rate" GridPane.rowIndex="6"/>

                        <ChoiceBox fx:id="roleInput" prefWidth="150.0" GridPane.columnIndex="1"/>
                        <ChoiceBox fx:id="departmentInput" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <TextField fx:id="nameInput" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <TextField fx:id="emailInput" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        <PasswordField fx:id="passwordInput" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                        <TextField fx:id="phoneInput" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                        <TextField fx:id="rateInput" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                    </children>

                </GridPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
