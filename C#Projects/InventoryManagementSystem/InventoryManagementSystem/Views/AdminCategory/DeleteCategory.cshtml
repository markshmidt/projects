@model Category

@{
    ViewBag.Title = "Delete Category";
    Layout = "_AdminLayout";
}


<h2>@ViewBag.Title</h2>

<div>
    <h4>Category</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-2">@Html.DisplayFor(model => model.Name)</dd>
    </dl>
    <hr/>
</div>

<form asp-action="DeleteCategory" asp-controller="AdminCategory" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>